{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "target": "ESNext",
    "module": "ESNext",

    "jsxImportSource": "solid-js",
    "jsx": "preserve",

    "strict": true,
    "noEmit": true,
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "types": [
      "vite-plugin-pwa/solid",
      "unplugin-icons/types/solid"
    ]
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
